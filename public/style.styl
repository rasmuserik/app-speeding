body
    font 14px Arial, sans-serif

#visualisation
    position relative
    margin-top 2em
    margin-left 2em

#correct
    background #0092b6
    color white
    margin 1px
    padding -1px

#wrong
    background #f28c00
    color white
    margin 1px
    padding -1px

.label
    position absolute
    font 10px arial, sans-serif
    background #888
    color white
    padding 1px
    border-radius 2px

.bar
    height 8px
    position absolute
    background #0092b6

.bar:hover
    background #00afda

.hoverInfo
    font 12px arial, sans-serif
    position absolute
    background #333
    color white
    padding 2px
    margin -4px
    border-radius 2px
    display none

.speedLine
    margin-top -3px
    position absolute
    height 10px
    width 2px
    background black

.offenders
    background #f28c00

.offenders:hover
    background #ffa800

